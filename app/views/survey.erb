<div id="section" class="container">

<h3 class="text-center">Welcome to Wolf Job Surveys!</h3>


<div class="row">
    <div class="col-xs-12 text-center">
      <%if @surveys%>
        <%@surveys.each do |survey| %>
          <div class="well">
            <p><a href = "/surveys/<%=survey.id%>"> <%=survey.title%></a></p>
          </div>
        <%end%>
      <%end%>

      <p><a id='new_survey_link' href='/surveys/new' class="btn btn-warning">New Survey</a></p>

     <form id='invisible_survey_form' class="form" action="/surveys" method="post">
      <div class="form-group">
        <label for="title">Survey Title:</label>
        <input type="text" class="form-control" name="title" value="">
      </div>
      <button type="submit" class="btn btn-default">Create Wolfy Survey</button>
      </form>
    </div>
</div>

</div>



