<div class="container">
  <h1>Sign Up</h1>
  <%= @error %>

  <form id="sign-up" method="post" action="/signup">
    <label class="label" for="name">Name</label>
    <input type="text" name="user[name]" placeholder="e.g., John Smith" >
    <br>

    <label class="label" for="username">Username</label>
    <input type="text" name="user[user_name]" placeholder="e.g., JSon15" >
    <br>

    <label class="label" for="email">Email</label>
    <input type="email" name="user[email]" placeholder="e.g., me@example.com" >
    <br>

    <label class="label" for="password_hash">Password</label>
    <input type="password" name="user[password_hash]" placeholder="6 or more characters">

    <label class="label" for="password">Verify Password</label>
    <input type="password" name="password" placeholder="6 or more characters">


    <br>

    <div class="submit"><input type="submit" value="Sign Up"></div>
  </form>

</div>
